<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Telescope.Views.SimpleFeatures">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
        <Button
            x:Name="CounterBtn"
            Text="Click me" 
            SemanticProperties.Hint="Counts the number of times you click"
            Clicked="OnCounterClicked"
            HorizontalOptions="Fill" />
        <Button Text="Open Map"
                Clicked="OnMapButtonClicked" />
        <Button Text="Trigger Notification"
                Clicked="OnNotifyButtonClicked" />
        </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>