<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Telescope.Model"
             x:Class="Telescope.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="zeromission_logo.png"
                HeightRequest="105"
                Aspect="AspectFit"
                SemanticProperties.Description="zeromission logo" />

            <Label
                Text="Telescope App"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            
            <Grid RowDefinitions="*, *, *" ColumnDefinitions="*, *" Padding="20" ColumnSpacing="20">
                <Button Text="Login For Power BI" Grid.Row="0" Grid.Column="0" Clicked="OnO365SignInClicked" />
                <Button Text="Login For auth0" Grid.Row="0" Grid.Column="1" Clicked="OnAuth0SignInClicked" />
                <!-- <Button Text="Page 3" Grid.Row="1" Grid.Column="0" Clicked="GoToPage3" /> -->
                <!-- <Button Text="Page 4" Grid.Row="1" Grid.Column="1" Clicked="GoToPage4" /> -->
            </Grid>
            
            <!-- <Button Text="Open Map" -->
            <!--         Clicked="OnMapButtonClicked" /> -->
            <!-- -->
            <!-- <Button Text="Listen" -->
            <!--         Clicked="StartListening" /> -->
            <!-- -->
            <!-- <Button Text="Stop Listen" -->
            <!--         Clicked="StopListening" /> -->
            <StackLayout>
                <Picker x:Name="ReportPicker" Title="Select a Report" SelectedIndexChanged="OnReportSelected">
                    <Picker.ItemDisplayBinding>
                        <Binding Path="Name" x:DataType="model:ReportView" />
                    </Picker.ItemDisplayBinding>
                </Picker>
                <WebView x:Name="ReportWebView" HeightRequest="1000" />
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
