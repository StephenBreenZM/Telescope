<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Telescope.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Telescope.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Telescope">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Simple Features"
        ContentTemplate="{DataTemplate local:SimpleFeatures}"
        Route="SimpleFeatures" />
    <ShellContent
        Title="Camera Features"
        ContentTemplate="{DataTemplate local:CameraFeatures}"
        Route="CameraFeatures" />
    <ShellContent
        Title="Reports"
        ContentTemplate="{DataTemplate local:ReportsPage}"
        Route="Reports" />
</Shell>
